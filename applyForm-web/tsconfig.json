{
  "compilerOptions": {
    "target": "ESNext", // Or "ES2020", "ES2022"
    "module": "ESNext", // Or "Node16", "NodeNext", "ES2020", "ES2022" - ESNext is generally safe for Vite
    "moduleResolution": "bundler", // Recommended for Vite/Rollup/Webpack 5+
    "strict": true, // Enable strict type-checking options (recommended)
    "jsx": "preserve", // Keep JSX as is for Vue compiler
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "lib": ["ESNext", "DOM"], // Include standard ES and DOM libraries
    "skipLibCheck": true, // Skip type checking of declaration files (speeds up build)
    "isolatedModules": true, // Recommended for build tools like Vite
    "types": ["vue/ref-macros", "vue/compiler-sfc", "vite/client", "js-cookie", "crypto-js", "node"], // Explicitly include types
    "baseUrl": "./src", // If you use @/ aliases, set this
    "paths": {
       "@/*": ["./*"] // If you use @/ aliases, set this
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "env.d.ts" // Include Vite's env type file
  ],
  "references": [{ "path": "./tsconfig.node.json" }] // If you have a separate tsconfig for node environment
}
